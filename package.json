{
  "scripts": {
    "preview": "zenn preview",
    "article": "zenn new:article",
    "article:slug": "zenn new:article --slug",
    "prepare": "husky install",
    "format": "prettier --write",
    "format:check": "prettier --check .",
    "format:all": "prettier --write .",
    "textlint": "textlint",
    "textlint:fix": "textlint --fix",
    "textlint:all": "textlint --fix ."
  },
  "devDependencies": {
    "zenn-cli": "^0.1.146",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "prettier": "^3.0.3",
    "textlint": "^13.3.3",
    "textlint-filter-rule-comments": "^1.2.2",
    "textlint-rule-preset-ja-spacing": "^2.3.0",
    "textlint-rule-preset-ja-technical-writing": "^8.0.0",
    "textlint-rule-prh": "^5.3.0",
    "prh": "^5.4.4"
  },
  "lint-staged": {
    "./**/*.{md}": [
      "pnpm run format",
      "pnpm run textlint:fix"
    ],
    "./**/*.{json,yaml,yml}": "pnpm run format"
  },
  "private": true
}
